echo -e "\E[44;1;37m             ðŸ› ðŸŸ¥BOT DK-SSH INSTALLERâš™ï¸ðŸ› ðŸŸ¥             \E[0m\n"
echo -e "                 \033[1;33m[\033[1;31m!\033[1;33m] \033[1;31mATTENTION \033[1;33m[\033[1;31m!\033[1;33m]\033[0m"
echo -e "\n\033[1;32m1Â° \033[1;37m- \033[1;33mBY YOUR TELEGRAM ACCESS THE FOLLOWING BOT\033[1;37m:\033[0m"
echo -e "\n\033[1;32m2Â° \033[1;37m- \033[1;33mBOT \033[1;37m@BotFather \033[1;33mCREATE YOUR BOT \033[1;31mOPTION: \033[1;37m/newbot\033[0m"
echo -e "\n\033[1;32m3Â° \033[1;37m- \033[1;33mBOT \033[1;37m@my_id_bot \033[1;33mAND GET YOUR ID \033[1;31mOPTION: \033[1;37m/id\033[0m"
echo -e "\033[0;34mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\033[1;32m"
echo ""
read -p "DESEJA CONTINUAR ? [s/n]: " -e -i n resposta
if [[ "$resposta" = 's' ]]; then
  	fun_botOnOff
  else
      echo -e "\n\033[1;31mReturning ...\033[0m"
      sleep 3
      menu
fi
}
[[ -f "/etc/SSHPlus/ShellBot.sh" ]] && fun_botOnOff || fun_instbot
